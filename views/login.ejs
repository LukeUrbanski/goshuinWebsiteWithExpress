<% include ./partials/header %>

    <div id="myContainer" class="container bg-light p-5">
        <div class="row">
            <form class="col-md-12 p-3" action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <input type="submit">
            </form>
        </div>
        <p class="text-center">Or</p>
        <hr>
        <div class="row">
            <!-- Facebook login button -->
            <a href="/auth/facebook" class="mx-auto">
                <button id="myFacebookButton" class="btn btn-lg p-2">
                    <i class="fab fa-facebook-square fa-lg align-middle mr-1"></i>
                    <span class="align-middle">Continue with Facebook</span>
                </button>
            </a>
        </div>
    </div>

<% include ./partials/footer %>