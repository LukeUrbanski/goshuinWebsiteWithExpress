<% include ../partials/header %>
    
    <div id="myContainer" class="container bg-light">
        <div class="row">
            <form class="col-md-12 p-3" action="/goshuins/<%= goshuin._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="goshuin[shrineOrTempleName]" value="<%= goshuin.shrineOrTempleName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="goshuin[generalLocation]" value="<%= goshuin.generalLocation %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="goshuin[prefecture]" value="<%= goshuin.prefecture %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="goshuin[image]" value="<%= goshuin.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="goshuin[comment]" value="Any thoughts or comments about this goshuin are welcome." rows="3"><%= goshuin.comment %></textarea>
                </div>
                <input type="submit">
            </form>
        </div>
    </div>
    
<% include ../partials/footer %>